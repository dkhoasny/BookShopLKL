    @*JS Link*@

    <script src="~/Content/MyContent/js/jquery.min.js"></script>

    @*searching products*@

    <link href="~/Content/MyContent/Intellisence/css/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Content/MyContent/Intellisence/js/jquery-1.10.2.min.js"></script>
    <script src="~/Content/MyContent/Intellisence/js/jquery-ui.min.js"></script>

    @*Custom JQuery Code For Seraching Product*@

    <script type="text/javascript">
        $(function () {
            $("#searchTxtBox").autocomplete({
                source: '@Url.Action("GetProducts","Product1")'
            });
        });
    </script>

</head>
<body>
    @*>>Webpage loader>>*@

    @*<div id="wpf-loader-two">
            <div class="wpf-loader-two-inner">
                <span>Loading</span>
            </div>
        </div>*@
    <!-- SCROLL TOP BUTTON -->
    <a class="scrollToTop" href="#"><i class="fa fa-chevron-up"></i></a>

    <!-- Start header section -->
    <header id="aa-header">
        <!-- start header top  -->
        <div class="aa-header-top">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-header-top-area">
                            <!-- start header top left -->
                            <div class="aa-header-top-left">

                                <!-- start currency -->
                                <div class="aa-currency">
                                    <div class="dropdown">
                                        <a class="btn dropdown-toggle" href="#" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                            <i class="fa fa-money"></i>VNĐ
                                        </a>
                                    </div>
                                </div>
                                <!-- start cellphone -->
                                <div class="cellphone hidden-xs">
                                    <p><span class="fa fa-phone"></span>033-238-2711</p>
                                </div>
                            </div>
                            <!-- header top Right -->
                            <div class="aa-header-top-right">
                                <ul class="aa-head-top-nav-right">

                                    <li><a href="@(Session["username"] != null ? Url.Action("Index", "Account") : Url.Action("Login", "Account"))">Tài khoản</a></li>

                                    <li class="hidden-xs">
                                        <a href="@(Session["username"] != null ? Url.Action("Index", "WishList") : Url.Action("Login", "Account"))">
                                            Danh sách ưa thích @if (@ViewBag.WlItemsNo > 0)
                                            {<text>(@ViewBag.WlItemsNo)</text>}
                                        </a>
                                    </li>

                                    <li class="hidden-xs">
                                        <a href="@(Session["username"] != null ? Url.Action("Index", "MyCart") : Url.Action("Login", "Account"))">
                                            Giỏ hàng @if (@ViewBag.NoOfItem > 0)
                                            {<text>(@ViewBag.NoOfItem)</text>}
                                        </a>
                                    </li>

                                    <li class="hidden-xs"><a href="@(Session["username"] != null ? Url.Action("Index", "CheckOut") : Url.Action("Login", "Account"))">Thanh toán</a></li>

                                    @if (Session["username"] == null)
                                    {

                                        <li>@Html.ActionLink("Đăng nhập", "Login", "Account")</li>
                                    }
                                    else
                                    {
                                        <li><a href="@Url.Action("Logout","Account")">Đăng xuất</a></li>
                                        <li><a href="">@Session["username"]</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- start header bottom  -->
        <div class="aa-header-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-header-bottom-area">
                            <!-- logo  -->
                            <div class="aa-logo">
                                <!-- Text based logo -->
                                <a href="@Url.Action("Index","Home")">
                                    <span class="fa fa-shopping-cart"></span>
                                    <p>shoplkl<strong>.ONLINE</strong> <span>Uy tín - Chất lượng</span></p>
                                </a>
                            </div>

                            <!-- cart box -->
                            <div class="aa-cartbox">
                                <a class="aa-cart-link" href="#">
                                    <span class="fa fa-shopping-basket"></span>
                                    <span class="aa-cart-title">GIỎ HÀNG</span>
                                    <span class="aa-cart-notify">@(ViewBag.NoOfItem==null ? 0 :ViewBag.NoOfItem)</span>
                                </a>

                                <div class="aa-cartbox-summary">
                                    <ul>
                                        @if (Session["username"] != null)
                                        {
                                            Html.RenderPartial("_CartBox");
                                        }
                                    </ul>

                                    <a class="aa-cartbox-checkout aa-primary-btn" href="@Url.Action("Index","CheckOut")">Thanh toán ngay</a>

                                </div>
                            </div>

                            <!-- search box -->
                            <div class="aa-search-box">
                                <form action="@Url.Action("Search","Product1")" method="get">

                                    <input type="text" name="products" id="searchTxtBox" placeholder="Tìm kiếm sản phẩm . . . ">

                                    <button type="submit" class="bg-primary"><span class="fa fa-search"></span></button>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- menu -->
    <section id="menu">
        <div class="container">
            <div class="menu-area">
                <!-- Navbar -->
                <div class="navbar navbar-default bg-dark" role="navigation">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse" style="background-color:forestgreen">
                        <!-- Left nav -->
                        <ul class="nav navbar-nav">
                            <li><a href="@Url.Action("Index","Home")">Trang chủ</a></li>

                            @{ BookShopLKL.Models.BookShopLKLEntities db = new BookShopLKL.Models.BookShopLKLEntities();

                                Dictionary<string, IEnumerable<string>> navbar = new Dictionary<string, IEnumerable<string>>();


                                List<BookShopLKL.Models.Category> Categories = db.Categories.ToList();

                                foreach (BookShopLKL.Models.Category cat in Categories)
                                {
                                    IEnumerable<string> subCat = db.SubCategories.Where(x => x.CategoryID == cat.CategoryID).Select(x => x.Name).ToList();
                                    navbar.Add(cat.Name, subCat);
                                }
                                int count = 0;
                                foreach (KeyValuePair<string, IEnumerable<string>> nav in navbar)
                                {
                                    if (count < 8)
                                    {
                                        <li>
                                            <a href="">@nav.Key<span class="caret"></span></a>
                                            <ul class="dropdown-menu">

                                                @foreach (var subNav in nav.Value)
                                                {
                                                    <li class="text-primary"><a href="@Url.Action("GetProductsByCategory","Product1", new { categoryName = subNav.Trim()})">@subNav.Trim()</a></li>
                                                }
                                            </ul>
                                        </li>
                                        count++;
                                    }
                                } }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="container-fluid">
        <div class="row">
            <div class="col">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- footer -->
    <footer id="aa-footer">
        <!-- footer bottom -->
        <div class="aa-footer-top bg-primary">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-footer-top-area">
                            <div class="row">
                                <div class="col-md-3 col-sm-6">
                                    <div class="aa-footer-widget">
