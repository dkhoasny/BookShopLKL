<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Responsive Admin &amp; Dashboard Template based on Bootstrap 5">
    <meta name="author" content="AdminKit">
    <meta name="keywords" content="adminkit, bootstrap, bootstrap 5, admin, dashboard, template, responsive, css, sass, html, theme, front-end, ui kit, web">
    <title>@ViewBag.Title - MVC BookShopLKL Project</title>
    <link href="~/Content/CSS/bootstrap.css" rel="stylesheet" />
    <link href="~/Fontawesome/css/all.css" rel="stylesheet" />
    <link href="~/Content/CSS/app.css" rel="stylesheet" />
    @RenderSection("Head", false)
</head>

<body>
    <div class="wrapper">
        @*Sidebar Navegation Start Here*@
        <nav id="sidebar" class="sidebar js-sidebar">
            <div class="sidebar-content js-simplebar">
                <a class="sidebar-brand" href="@Url.Action("Index", "Dashboard")">
                    <span class="align-middle">BookShopLKL</span>
                </a>

                <ul class="sidebar-nav">

                    <li class="sidebar-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
                        <a class="sidebar-link fs-4" href="@Url.Action("Index", "Dashboard")">
                            <i class="fa-solid fa-gauge"></i><span class="align-middle">Trang tổng quan</span>
                        </a>
                    </li>

                    <li class="sidebar-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Order" ? "active" : "")">
                        <a class="sidebar-link fs-4" href="@Url.Action("Index", "Order")">
                            <i class="fa-regular fa-cart-shopping-fast"></i><span class="align-middle">Đơn hàng</span>
                        </a>
                    </li>

                    <li class="sidebar-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Product" ? "active" : "")">
                        <a class="sidebar-link fs-4" href="@Url.Action("Index", "Product")">
                            <i class="fa-solid fa-table"></i><span class="align-middle">Sản phẩm</span>
                        </a>
                    </li>

                    <li class="sidebar-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Supplier" ? "active" : "")">
                        <a class="sidebar-link fs-4" href="@Url.Action("Index", "Supplier")">
                            <i class="fa-regular fa-truck-field"></i><span class="align-middle">Nhà cung cấp</span>
                        </a>
                    </li>

                    <li class="sidebar-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Customer" ? "active" : "")">
                        <a class="sidebar-link fs-4" href="@Url.Action("Index", "Customer")">
                            <i class="fa-light fa-person"></i><span class="align-middle">Khách hàng</span>
                        </a>
                    </li>

                    <li class="sidebar-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Employee" ? "active" : "")">
                        <a class="sidebar-link fs-4" href="@Url.Action("Index", "Employee")">
                            <i class="fa-solid fa-person-chalkboard"></i><span class="align-middle">Nhân viên</span>
                        </a>
                    </li>

                    <li class="sidebar-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Category" && ViewContext.RouteData.Values["action"]?.ToString() == "Create" ? "active" : "")">
                        <a class="sidebar-link fs-4" href="@Url.Action("Create", "Category")">
                            <i class="fa-regular fa-cabinet-filing"></i><span class="align-middle">Thêm danh mục</span>
                        </a>
                    </li>

                    <li class="sidebar-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "SubCategory" && ViewContext.RouteData.Values["action"]?.ToString() == "Create" ? "active" : "")">
                        <a class="sidebar-link fs-4" href="@Url.Action("Create", "SubCategory")">
                            <i class="fa-solid fa-diagram-subtask"></i><span class="align-middle">Thêm danh mục con</span>
                        </a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-icon dropdown-toggle d-inline-block d-sm-none" href="#" data-bs-toggle="dropdown">
                            <i class="align-middle" data-feather="settings"></i>
                        </a>
                        <a class="nav-link dropdown-toggle d-none d-sm-inline-block" href="#" data-bs-toggle="dropdown">
                            &nbsp;&nbsp;&nbsp;<i class="fa-solid fa-file-chart-column fs-4" style="color: rgba(233,236,239,.5);"></i>&nbsp;&nbsp;&nbsp;<span class="fs-4" style="color: rgba(233,236,239,.5);">Xem báo cáo</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end">
                            <a class="dropdown-item fs-4 @(ViewContext.RouteData.Values["action"]?.ToString() == "StocksReport" ? "active" : "")" href="@Url.Action("StocksReport", "Reports")"><i class="fa-solid fa-arrow-trend-up"></i> Báo cáo hàng tồn</a>
                            <a class="dropdown-item fs-4 @(ViewContext.RouteData.Values["action"]?.ToString() == "CustomersReport" ? "active" : "")" href="@Url.Action("CustomersReport", "Reports")"><i class="fa-solid fa-chart-user"></i> Báo cáo của khách hàng</a>
                            <a class="dropdown-item fs-4 @(ViewContext.RouteData.Values["action"]?.ToString() == "SalesReport" ? "active" : "")" href="@Url.Action("SalesReport", "Reports")"><i class="fa-solid fa-messages-dollar"></i> Báo cáo giảm giá</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="https://localhost:44371/">BookShopLKL</a>
                        </div>
                    </li>

                    <li class="sidebar-header border-top mt-2 fs-4 text-muted"></li>

                    <li class="sidebar-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Profile" ? "active" : "")">
                        <a class="sidebar-link fs-4" href="@Url.Action("Index", "Profile")">
                            <i class="fa-solid fa-user"></i><span class="align-middle">Hồ sơ</span>
                        </a>
                    </li>

                    <li class="sidebar-item">
                        <a class="sidebar-link fs-4" href="@Url.Action("Logout", "admin_Login")">
                            <i class="fa-regular fa-right-from-bracket"></i><span class="align-middle">Đăng xuất</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="main">
            <nav class="navbar navbar-expand navbar-light navbar-bg">
                <a class="sidebar-toggle js-sidebar-toggle">
                    <i class="hamburger align-self-center"></i>
                </a>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav navbar-align">
                        @*Top Navegation Start Here*@
                        <li class="nav-item dropdown">
                            <a class=" d-inline-block d-sm-none nav-link fs-4" href="#">
                                <i class="fa-duotone fa-hands-clapping"></i>&nbsp;<span>Xin chào!&nbsp;@Session["username"]</span>
                            </a>

                            <a class="nav-link d-none d-sm-inline-block fs-4" href="#" data-bs-toggle="dropdown">
                                <i class="fa-duotone fa-hands-clapping"></i>&nbsp;<span>Xin chào!&nbsp;@Session["username"]</span>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link d-none d-sm-inline-block fs-4" href="@Url.Action("Index", "Profile")">
                                <i class="fa-solid fa-user"></i>&nbsp;<span>Hồ sơ</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-none d-sm-inline-block fs-4" href="@Url.Action("Logout", "admin_Login")">
                                <i class="fa-regular fa-right-from-bracket"></i>&nbsp;<span>Đăng xuất</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            @*Content Area Srart Here*@
            <main class="content">
                <div class="container-fluid p-0">
                    @RenderBody()
                </div>
            </main>
            @*Footer Section Start*@
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row text-muted">
                        <div class="col-6 text-start">
                            <p class="mb-0">
                                <a class="text-muted nav-link" href="@Url.Action("Index", "Dashboard")">&copy; @DateTime.Now.Year<strong>&nbsp;BookShopLKL</strong></a>
                            </p>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    @RenderSection("scripts", false)
    <script src="~/Content/JS/bootstrap.js"></script>
    <script src="~/Content/JS/app.js"></script>
</body>
</html>

