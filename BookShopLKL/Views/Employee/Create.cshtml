@model BookShopLKL.Models.EmployeeVM
@{
    ViewBag.Title = "Add New Employee";
}

<div class="row">
    <div class="col">
        <h2 class="text-info">Thêm mới Nhân viên</h2>
        <hr />
        <div class="col-md-12">
            @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "msg", OnComplete = "clearAll" }))
            {
                @Html.AntiForgeryToken()
                <div class="row mb-2">
                    <div id="msg">

                    </div>
                </div>
                <div class="row g-3">
                    <div class="col-md-6">
                        @Html.LabelFor(x => x.FirstName, new { @class = "form-label fs-4" })
                        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control fs-4" })
                        @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(x => x.LastName, new { @class = "form-label fs-4" })
                        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control fs-4" })
                        @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(x => x.DateofBirth, new { @class = "form-label fs-4" })
                        @Html.EditorFor(x => x.DateofBirth, new { htmlAttributes = new { @class = "form-control fs-4" }, Type = "date" })
                        @Html.ValidationMessageFor(x => x.DateofBirth, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(x => x.Gender, new { @class = "form-label fs-4" })
                        @Html.DropDownList("Gender", new List<SelectListItem>() {
                                            new SelectListItem(){Text="Nam",Value="Nam"},
                                            new SelectListItem(){Text="Nữ",Value="Nữ"},
                                            new SelectListItem(){Text="Khác",Value="Khác"}
                            }, "--Chọn giới tính--", new { @class = "form-control fs-4" })
                        @Html.ValidationMessageFor(x => x.Gender, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(x => x.Email, new { @class = "form-label fs-4" })
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control fs-4" })
                        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(x => x.Phone, new { @class = "form-label fs-4" })
                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control fs-4" })
                        @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(x => x.Address, new { @class = "form-label fs-4" })
                        @Html.TextAreaFor(x => x.Address, new { @class = "form-control fs-4" })
                        @Html.ValidationMessageFor(x => x.Address, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(x => x.Picture, new { @class = "form-label fs-4" })
                        <div class="input-group mb-3">
                            <!-- Nút tùy chỉnh chọn tệp -->
                            <label for="file-upload" class="btn btn-primary fs-4" style="background-color: yellowgreen;">Chọn tệp tin</label>
                            <!-- Input file ẩn -->
                            @Html.TextBoxFor(x => x.Picture, new { @class = "form-control fs-4", type = "file", id = "file-upload", style = "display:none;" })
                            <!-- Hiển thị tên tệp tin -->
                            <input type="text" id="file-name" class="form-control fs-4" value="Chưa có tệp tin nào được chọn" readonly />
                        </div>
                        <!-- JavaScript -->
                        <script>
                            document.getElementById('file-upload').addEventListener('change', function () {
                                var fileName = this.files[0] ? this.files[0].name : "Chưa có tệp tin nào được chọn";
                                document.getElementById('file-name').value = fileName;
                            });
                        </script>
                        @Html.ValidationMessageFor(x => x.Picture, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12 d-flex justify-content-lg-end mt-2">
                    <button type="submit" class="btn btn-success btn-lg col-4"><i class="fa-regular fa-floppy-disk fs-4"></i> Lưu</button>
                </div>
            }

            <div class="col-md-12 d-flex justify-content-lg-start mt-2">
                <a href="@Url.Action("Index", "Employee")" class="btn btn-danger btn-sm fs-4"><i class="fa-regular fa-hand-back-point-left"></i> Trở về</a>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Content/JS/jquery-3.6.0.js"></script>
    <script src="~/Content/JS/jquery.validate.js"></script>
    <script src="~/Content/JS/jquery.validate.unobtrusive.js"></script>
    <script src="~/Content/JS/jquery.unobtrusive-ajax.js"></script>
    <script>$("#form0").attr("enctype", "multipart/form-data")

        function clearAll() {
            $("#form0").trigger("reset");
        }</script>

}
