@model BookShopLKL.Models.admin_Employee
@{
    ViewBag.Title = "Conform Delete";
}

<Div class="row">
    <div class="col">
        <div class="col-md-12">
            @using (Html.BeginForm("Delete", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(x => x.EmpID)
                @Html.AntiForgeryToken()
                <section class="section about-section gray-bg" id="about">
                    <div class="container">
                        <div class="row align-items-center flex-row-reverse">
                            <div class="col-lg-8">
                                <div class="about-text go-to">
                                    <h2 class="dark-color text-danger">Bạn có chắc chắn muốn xóa không? </h2>
                                    <hr />
                                    <h3 class="theme-color lead fs-2">@Model.FirstName&nbsp;@Model.LastName</h3>
                                    <div class="row about-list">
                                        <div class="col-md-6">
                                            <div class="media">
                                                <label class="fs-4" style="color: red"><strong>Ngày sinh</strong></label>
                                                <p>@Html.DisplayFor(x => x.DateofBirth)</p>
                                            </div>
                                            <div class="media">
                                                <label class="fs-4" style="color: red"><strong>Địa chỉ</strong></label>
                                                <p>@Model.Address</p>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="media">
                                                <label class="fs-4" style="color: red"><strong>E-mail</strong></label>
                                                <p>@Model.Email</p>
                                            </div>
                                            <div class="media">
                                                <label class="fs-4" style="color: red"><strong>Số điện thoại</strong></label>
                                                <p>@Model.Phone</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 @*d-flex justify-content-end*@">
                                <div class="about-avatar">
                                    <img src="@Url.Content(Model.PicturePath)" title="No Image" alt="" width="250" height="250">
                                </div>
                            </div>
                        </div>
                        <div class="counter mt-4">
                            <div class="row">
                                <div class="col-6 col-lg-3">
                                    <a href="@Url.Action("Index", "Employee")" class="btn btn-info btn-sm fs-4"><i class="fa-regular fa-hand-back-point-left"></i> Trở về</a>
                                </div>
                                <div class="col-6 col-lg-9 text-end">
                                    <button type="submit" class="btn btn-danger fs-4"><i class="fa-solid fa-trash fs-4"></i>&nbsp;Đồng ý</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            }
        </div>
    </div>
</Div>

