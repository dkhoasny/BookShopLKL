@model BookShopLKL.Models.Product

@{
    ViewBag.Title = "View Details";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

 }
<link href="~/Content/MyContent/css/style.css" rel="stylesheet" />
<!-- product category -->
<section id="aa-product-details">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-product-details-area">
                    <div class="aa-product-details-content">
                        <div class="row">
                            <!-- Modal view slider -->
                            <div class="col-md-5 col-sm-5 col-xs-12">
                                <div class="aa-product-view-slider">
                                    <div id="demo-1" class="simpleLens-gallery-container">
                                        <div class="simpleLens-container">
                                            <div class="simpleLens-big-image-container"><a data-lens-image="@Url.Content(Model.PicturePath)" class="simpleLens-lens-image"><img src="@Url.Content(Model.PicturePath)" class="simpleLens-big-image"></a></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Modal view content -->
                            <div class="col-md-7 col-sm-7 col-xs-12">
                                <div class="aa-product-view-content">
                                    <h3><strong> @Model.Name</strong></h3>
                                    <div class="aa-product-rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (ViewBag.AvgRate >= i)
                                            {
                                                <span class="fa fa-star" style="color: #ff6600"></span> }
                                            else
                                            {
                                                <span class="fa fa-star-o" style="color: #ff6600"></span>}
                                        }

                                    </div>

                                    <div class="aa-price-block">
                                        <span class="aa-product-view-price"> <b> @Model.UnitPrice.ToString("N0")₫</b></span>
                                        @if (Model.UnitInStock > 0)
                                        {
                                            <p class="aa-product-avilability"><span style="color:white ;background-color:green">Còn hàng (@Model.UnitInStock)</span></p> }
                                        else
                                        {
                                            <p class="aa-product-avilability"><span style="color:white;background-color:red">Hết hàng</span></p>}
                                        @{ TempData["returnURL"] = Request.RawUrl; }


                                    </div>
                                    <p>@Html.Raw(Model.ShortDescription.Replace("\n", "<br />"))</p>
                                    <div class="aa-prod-quantity">
                                        <h4>Số lượng:</h4>
                                        <form action="">
                                            <input type="number" name="quantity" min="1" max="99" maxlength="2" value="1" />
                                        </form>
                                    </div>
                                    <div class="aa-prod-view-bottom">
                                        @if (Model.UnitInStock > 0)
                                        {
                                            <a class="aa-add-to-cart-btn" href="@(Session["username"] != null ? @Url.Action("AddToCart", "Product1", new { id = @Model.ProductID, quality = Request["quality"] }) : Url.Action("Login", "Account"))">Thêm vào giỏ hàng</a> }
                                        else
                                        {
                                    <a class="aa-add-to-cart-btn" ))">Thêm vào giỏ hàng</a>}
                                        <a class="aa-add-to-cart-btn" href="@(Session["username"] != null ? Url.Action("WishList", "Product1", new { id = Model.ProductID }) : Url.Action("Login", "Account"))">Thêm vào danh sách ưa thích</a>
                                    </div>
                                    @*<div class="aa-prod-quantity">
                                        <h4>Số lượng:</h4>
                                        <input type="number" name="quantity" id="quantity" min="1" max="99" value="1" />
                                    </div>

                                    <div class="aa-prod-view-bottom">
                                        @if (Model.UnitInStock > 0)
                                        {
                                            <a class="aa-add-to-cart-btn" href="#" onclick="addToCart(@Model.ProductID); return false;">Thêm vào giỏ hàng</a>
                                        }
                                        else
                                        {
                                    <a class="aa-add-to-cart-btn" href="#">Thêm vào giỏ hàng</a>
                                        }
                                        <a class="aa-add-to-cart-btn" href="@(Session["username"] != null ? Url.Action("WishList", "Product1", new { id = Model.ProductID }) : Url.Action("Login", "Account"))">Thêm vào danh sách ưa thích</a>
                                    </div>

