@model BookShopLKL.Models.CustomerVM
@{
    ViewBag.Title = "Product Details";
}

<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-8">
                <div class="about-text go-to">
                    <h2 class="dark-color">Thông tin chi tiết Khách hàng</h2>
                    <hr />
                    <h3 class="theme-color lead fs-2" style="color:darkblue">@Model.First_Name&nbsp;@Model.Last_Name</h3>
                    <div class="row about-list">
                        <div class="col-md-6">
                            <div class="media">
                                <label class="fs-4" style="color: red"><strong>Ngày sinh</strong></label>
                                <p>@Html.DisplayFor(x => x.DateofBirth)</p>
                            </div>
                            <div class="media">
                                <label class="fs-4" style="color: red"><strong>Giới tính</strong></label>
                                <p>@Model.Gender</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                <label class="fs-4" style="color: red"><strong>Quốc gia</strong></label>
                                <p>@Model.Country</p>
                            </div>
                            <div class="media">
                                <label class="fs-4" style="color: red"><strong>Thành phố</strong></label>
                                <p>@Model.City</p>

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                <label class="fs-4" style="color: red"><strong>Email</strong></label>
                                <p>@Model.Email</p>
                            </div>
                            <div class="media">
                                <label class="fs-4" style="color: red"><strong>Số điện thoại</strong></label>
                                <p>@Model.Phone</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                <label class="fs-4" style="color: red"><strong>Mã bưu chính</strong></label>
                                <p>@Model.PostalCode</p>
                            </div>
                            <div class="media">
                                <label class="fs-4" style="color: red"><strong>Địa chỉ</strong></label>
                                <p>@Model.Address</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 @*d-flex justify-content-end*@">
                <div class="about-avatar">
                    <img src="@Url.Content(Model.PicturePath)" title="No Image" alt="" width="250" height="250">
                </div>
            </div>
        </div>
        <div class="counter mt-4">
            <div class="row">
                <div class="col-6 col-lg-3">
                    <a href="@Url.Action("Index", "Customer")" class="btn btn-danger btn-sm fs-4"><i class="fa-regular fa-hand-back-point-left"></i> Trở về</a>
                </div>
            </div>
        </div>
    </div>
</section>

