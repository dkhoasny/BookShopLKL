@model BookShopLKL.Models.Product
@{
    ViewBag.Title = "Xóa Sản Phẩm";
}

<Div class="row">
    <div class="col">
        <div class="col-md-12">
            @using (Html.BeginForm("Delete", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(x => x.ProductID)
                @Html.AntiForgeryToken()
                <section class="section about-section gray-bg" id="about">
                    <div class="container">
                        <div class="row align-items-center flex-row-reverse">
                            <div class="col-lg-8">
                                <div class="about-text go-to">
                                    <h2 class="dark-color text-danger">Tiến hành xóa sản phẩm </h2>
                                    <hr />
                                    <h3 class="theme-color lead fs-2">@Model.Name</h3>
                                    <div class="col-md-12">
                                        <label class="fs-4" style="color: red"><strong>Mô tả sản phẩm</strong></label>
                                        <p style="text-align:justify;">@Html.Raw(Model.ShortDescription.Replace("\n", "<br />"))</p>
                                    </div>
                                    <div class="row about-list">
                                        <div class="col-md-6">
                                            <div class="media">
                                                <label class="fs-4" style="color: red"><strong>Giá tiền</strong></label>
                                                <p>@(Model.UnitPrice >= 0 ? String.Format("{0:N0} VNĐ", Model.UnitPrice) : "N/A")</p>
                                            </div>
                                            <div class="media">
                                                <label class="fs-4" style="color: red"><strong>Giá tiền trước kia</strong></label>
                                                <p>@(Model.OldPrice >= 0 ? String.Format("{0:N0} VNĐ", Model.OldPrice) : "N/A")</p>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="media">
                                                <label class="fs-4" style="color: red"><strong>Tồn kho</strong></label>
                                                <p>@Model.UnitInStock</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 @*d-flex justify-content-end*@">
                                <div class="about-avatar">
                                    <img src="@Url.Content(Model.PicturePath)" title="No Image" alt="" width="250" height="250">
                                </div>
                            </div>
                        </div>
                        <div class="counter mt-4">
                            <div class="row">
                                <div class="col-6 col-lg-3">
                                    <a href="@Url.Action("Index", "Product")" class="btn btn-info btn-sm fs-4"><i class="fa-regular fa-hand-back-point-left"></i> Trở về</a>
                                </div>
                                <div class="col-6 col-lg-9 text-end">
                                    <button type="submit" class="btn btn-danger fs-4"><i class="fa-solid fa-trash fs-4"></i>&nbsp;Xóa</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            }
        </div>
    </div>
</Div>


