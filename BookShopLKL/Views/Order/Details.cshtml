@using BookShopLKL.Models;
@model Tuple<Order, IEnumerable<OrderDetail>>
@{
    ViewBag.Title = "Order";
    ViewBag.SubTitle = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <dl class="dl-horizontal ">
            <dt>
                @Html.DisplayName("Mã đơn hàng : ")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.OrderID)
            </dd>
            <dt>
                @Html.DisplayName("Tên khách hàng : ")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.Customer.First_Name)&nbsp;@Html.DisplayFor(model => model.Item1.Customer.Last_Name)
            </dd>
            <dt>
                @Html.DisplayName("Đia chỉ khách hàng : ")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.Customer.Address)
            </dd>
            <dt>
                @Html.DisplayName("Số điện thoại : ")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.Customer.Phone)
            </dd>

        </dl>
    </div>
    <div class="col-md-6">
        <dl class="dl-horizontal ">
            <dt>
                @Html.DisplayName("Mã giao hàng : ")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.ShippingID)
            </dd>

            <dt>
                @Html.DisplayName("Mã thanh toán : ")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.Payment.PaymentType.TypeName)
            </dd>

            <dt>
                @Html.DisplayName("Địa chỉ giao hàng : ")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.ShippingDetail.Address)
            </dd>
            <dt>
                @Html.DisplayName("Email giao hàng : ")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.ShippingDetail.Email)
            </dd>

        </dl>
    </div>
</div>

<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading" style="padding:5px 15px">
            <h4>Các mặt hàng</h4>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="">
                    <div class="table-responsive col-md-off ">
                        <table class="table table-hover ">
                            <thead>
                                <tr>
                                    <th>Mã hàng</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Số lượng</th>
                                    <th>Giá tiền</th>
                                    <th>Tổng</th>
                                </tr>
                            </thead>

                            <tbody>
                                @{int i = 0;}
                                @foreach (var item in Model.Item2)
                                {
                                    i++;
                                    <tr>
                                        <td>@i.ToString()</td>
                                        <td>@item.Product.Name</td>
                                        <td>@item.Quantity</td>
                                        @*<td>@(item.UnitPrice.HasValue ? item.UnitPrice.Value.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")) : "N/A")</td>*@
                                        <td>@(item.UnitPrice.HasValue ? String.Format("{0:N0} VNĐ", item.UnitPrice.Value) : "N/A")</td>
                                        @*<td>@(item.TotalAmount.HasValue ? item.TotalAmount.Value.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")) : "N/A")</td>*@
                                        <td>@(item.TotalAmount.HasValue ? String.Format("{0:N0} VNĐ", item.TotalAmount.Value) : "N/A")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="5"><h2></h2></td>

                                </tr>
                                @*<tr>
                                        <th></th>
                                        <th></th>
                                        <th>@ViewBag.TotalItems</th>
                                        <th></th>
                                        <th>@ViewBag.Amount </th>
                                    </tr>*@
                                <tr>
                                    <th>Giảm giá</th>
                                    <th colspan="3"></th>
                                    @*<th>@(ViewBag.Discount != null ? ((int)ViewBag.Discount).ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")) : "N/A")</th>*@
                                    <th>@(ViewBag.Discount != null ? String.Format("{0:N0} VNĐ", ViewBag.Discount) : "N/A")</th>
                                </tr>
                                <tr class="bg-info">
                                    <th>Thành tiền</th>
                                    <th colspan="3"></th>
                                    @*<th>@(ViewBag.TAmount != null ? ((double)ViewBag.TAmount).ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")) : "N/A")</th>*@
                                    <th>@(ViewBag.TAmount != null ? String.Format("{0:N0} VNĐ", ViewBag.TAmount) : "N/A")</th>
                                </tr>
                            </tfoot>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
